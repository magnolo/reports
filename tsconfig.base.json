{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@twentythree/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@twentythree/core": ["libs/core/src/index.ts"],
      "@twentythree/core/*": ["libs/core/src/lib/*"],
      "@twentythree/fuse": ["libs/fuse/src/index.ts"],
      "@twentythree/fuse/*": ["libs/fuse/src/lib/*"],
      "@twentythree/layout": ["libs/layout/src/index.ts"],
      "@twentythree/layout/*": ["libs/layout/src/lib/*"],
      "@twentythree/shared": ["libs/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
